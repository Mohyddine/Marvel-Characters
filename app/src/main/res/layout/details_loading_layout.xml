<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/two_hundred_fifty"
        android:layout_height="@dimen/two_hundred_fifty"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/tvOneLbl"
        android:layout_width="@dimen/thirty"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twelve"
        android:layout_marginTop="@dimen/sixteen"
        android:background="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv" />

    <TextView
        android:id="@+id/tvTwoLbl"
        android:layout_width="@dimen/sixty"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twelve"
        android:layout_marginTop="@dimen/eight"
        android:background="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/tvThreeLbl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOne" />

    <TextView
        android:id="@+id/tvThreeLbl"
        android:layout_width="@dimen/thirty_five"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twelve"
        android:layout_marginTop="@dimen/eight"
        android:background="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTwo" />

    <TextView
        android:id="@+id/tvOne"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/eight"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/tvOneLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvOneLbl"
        app:layout_constraintTop_toTopOf="@+id/tvOneLbl" />

    <TextView
        android:id="@+id/tvTwo"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/eight"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="@id/tvTwoLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTwoLbl"
        app:layout_constraintTop_toTopOf="@+id/tvTwoLbl" />

    <TextView
        android:id="@+id/tvThree"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/one_hundred"
        android:layout_marginHorizontal="@dimen/eight"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvThreeLbl"
        app:layout_constraintTop_toTopOf="@+id/tvThreeLbl" />

    <TextView
        android:id="@+id/tvFour"
        android:layout_width="@dimen/one_hundred"
        android:layout_height="@dimen/thirty"
        android:layout_marginHorizontal="@dimen/eight"
        android:layout_marginTop="@dimen/ten"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvThree" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred"
        android:layout_marginHorizontal="@dimen/five"
        android:layout_marginTop="@dimen/ten"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFour">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/one_hundred_twenty"
            android:layout_height="@dimen/one_hundred_eighty"
            android:layout_margin="@dimen/eight"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="@dimen/fifteen" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/one_hundred_twenty"
            android:layout_height="@dimen/one_hundred_eighty"
            android:layout_margin="@dimen/eight"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="@dimen/fifteen" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/one_hundred_twenty"
            android:layout_height="@dimen/one_hundred_eighty"
            android:layout_margin="@dimen/eight"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="@dimen/fifteen" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>